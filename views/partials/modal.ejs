<div id="<%= id %>" class="modal hidden">
  <div class="modal-content">
    <button class="close-button" type="button" data-action="close-modal">
      <svg width="32" height="32" fill="#000" viewBox="0 0 256 256">
        <path
          d="M205.66,194.34a8,8,0,0,1-11.32,11.32L128,139.31,61.66,205.66a8,8,0,0,1-11.32-11.32L116.69,128,50.34,61.66A8,8,0,0,1,61.66,50.34L128,116.69l66.34-66.35a8,8,0,0,1,11.32,11.32L139.31,128Z"
        />
      </svg>
    </button>

    <form action="<%= action %>" method="post">
      <input type="hidden" name="id">

      <div class="input-group">
        <label for="title">Title</label>
        <input
          type="text"
          id="title"
          autocomplete="off"
          value="<%= item?.title ?? "" %>"
          required
          <%= item?.title ? "disabled" : "" %>
          data-autocomplete="title"
        />

        <input type="hidden" name="title" data-selected-title />

        <ul class="autocomplete-list hidden"></ul>
      </div>

      <div class="input-group">
        <label for="date">Date Read</label>
        <input
          type="date"
          id="date"
          name="date"
          placeholder="YYYY-MM-DD"
          autocomplete="off"
          value="<%= item?.date_read ? item.date_read.toISOString().split('T')[0] : "" %>"
          required
        />
      </div>

      <div class="input-group">
        <label for="rating">Rating</label>
        <input
          type="number"
          step="0.1"
          min="1"
          max="5"
          id="rating"
          name="rating"
          autocomplete="off"
          value="<%= item?.rating ?? "" %>"
          required
        />
      </div>

      <div class="input-group">
        <label for="review">Review</label>
        <textarea
          id="review"
          name="review"
          rows="4"
          cols="50"
          required
        ><%= item?.review ?? "" %></textarea>
      </div>

      <button class="add-button"><%= submitText %></button>
    </form>
  </div>
</div>
